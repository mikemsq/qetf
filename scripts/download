#!/usr/bin/env bash
# Single-word wrapper: download
# Run the stooq downloader for the curated universe (no args).
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"
cd "$PROJECT_DIR"

OUTDIR="data/raw/prices/stooq"
mkdir -p "$OUTDIR"

PYTHON="${VENV_PYTHON:-python3}"

exec "$PYTHON" scripts/download_ohlcv_stooq.py \
  --universe "data/curated/etf_universe.csv" \
  --out-dir "$OUTDIR"
