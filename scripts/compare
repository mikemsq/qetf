#!/usr/bin/env bash
# Single-word wrapper: compare
# Compare the most recent backtests into a comparisons/latest dir (no args).
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"
cd "$PROJECT_DIR"

OUT="artifacts/comparisons/latest"
mkdir -p "$OUT"

PYTHON="${VENV_PYTHON:-python3}"

exec "$PYTHON" scripts/compare_strategies.py \
  --backtest-dirs artifacts/backtests/*/ \
  --output "$OUT"
